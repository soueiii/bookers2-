<div class="container">
 <div class="row">
  <div class="box1 col-md-3">
   <table class="table">
       <h2>User info</h2>
        <thead>
         <tr>
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"60x60" %>         </tr>
        </thead>
        <tbody>
        <tr>
         <th>Name</th>
         <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>Introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
       <tr>
       <div class="row">
        <%= link_to edit_user_path(@user.id), class:"btn btn-default btn-sm btn-block" do %>
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
       </tr>
       <% end %>
      </div>
      </tbody>
      </table>
      <div class="row">
       <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary  btn-sm btn-block" do %>
        <span class="btn-block fas fa-user-cog"></span>
       <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
       <%= form_with model:@book,local:true do |f| %>
       <div class="form-group">
        <label for="book_title">Title
         <%= f.text_field :title %>
        </label>
       </div>
       <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body %>
       </div>
       <div class="form-group">
        <%= f.submit "Create Book",class:"btn btn-success" %>
       </div>
      <% end %>

 </div>
 <div class="box2 col-md-8 offset-md-1">
   <h2>Books</h2>
   ã€€ <table class="table">
       <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
        </thead>
        <% @books.each do |book| %>
       <tbody>
         <tr>
          <td>
          <%= link_to user_path(@user) do %>
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %>
          <% end %>
          </td>
          <td>
          <%= link_to book_path(book.id) do %>
          <%= book.title %>
          <% end %>
          </td>
          <td>
           <%= book.body %>
          </td>
         </tr>
         <% end %>
        </tbody>
       </table>
     </div>
   </div>
</div>