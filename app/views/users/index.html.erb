<div class="container">
 <div class="row">
  <div class="box1 col-md-3">
  <%= render'users/userinfo',user:@user,book:@book %>
 </div>
  <div class="box2 col-md-8 offset-md-1">
    <h2>Users</h2>
      <table class="table">
       <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
         <tr>
          <td>
           <%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size:"40x40" %>
          </td>
          <td>
           <%= user.name %>
          </td>
          <td>
          <%= link_to "Show",user_path(user.id) %>
          </td>
         </tr>
       <% end %>
       </tbody>
       </table>
  </div>
 </div>
</div>
<%= render'layouts/footer' %>